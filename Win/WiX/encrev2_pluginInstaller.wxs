    <Product Id="{237e99c7-d2ca-5c68-8908-fac82438fb63}" Name="${PLUGIN_NAME}" Language="1033" Version="${FBSTRING_PLUGIN_VERSION}" Manufacturer="${FBSTRING_CompanyName}" UpgradeCode="645d466f-1d45-59a4-8a90-2ba490d05913">
